<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tinuade.nougat_home_teach">

    <application
        android:name=".HomeTeach"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.TeacherDashBoardActivity"
            android:label="Teacher dashboard"
            android:theme="@style/UserConsoleTheme"/>
        <activity
            android:name=".ui.ParentDashBoardActivity"
            android:label="Parent dashboard"
            android:theme="@style/UserConsoleTheme" />
        <activity android:name=".ui.OnboardingScreenActivity" />
        <activity
            android:name=".ui.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ParentSignUpActivity" />
        <activity android:name=".ui.TeacherSignUpActivity" />
        <activity android:name=".ui.SignUpScreenActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.MainActivity" />
    </application>

</manifest>